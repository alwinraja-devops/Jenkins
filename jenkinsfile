pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        TF_VAR_key_name = credentials('aws-keypair-name') // OR hardcode if needed
    }

    stages {
        stage('Clone Terraform Code') {
            steps {
                git 'https://github.com/your-user/terraform-ec2-multi-os.git' // replace with your repo
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'terraform plan'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
}
